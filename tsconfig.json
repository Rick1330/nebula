{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext"],
		"jsx": "react-jsx"
	},
	"include": ["server/**/*.ts"],
	"exclude": ["node_modules", "web/**"]
}
